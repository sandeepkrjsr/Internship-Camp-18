<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/large">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Point of Contacts"
                android:textSize="@dimen/large"
                android:textColor="@color/blue"
                android:fontFamily="@font/monserrat" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Here is our Point of Contacts"
                android:textColor="@color/grey"
                android:fontFamily="@font/monserrat"
                android:paddingBottom="@dimen/medium" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Add Your POC"
                android:background="@drawable/bg_curve"
                android:fontFamily="@font/monserrat"
                android:drawableLeft="@drawable/ic_add"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/small"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/large">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Requirements"
                android:textSize="@dimen/large"
                android:textColor="@color/blue"
                android:fontFamily="@font/monserrat" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tell us what are your skill requirements so that we can match you with the best applicants."
                android:textColor="@color/grey"
                android:fontFamily="@font/monserrat"
                android:paddingBottom="@dimen/medium" />
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/flexboxlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                app:alignItems="stretch"
                app:alignContent="stretch" />
            <TextView
                android:id="@+id/co_requirements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Add Requirements"
                android:background="@drawable/bg_curve"
                android:fontFamily="@font/monserrat"
                android:drawableLeft="@drawable/ic_add"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/small"/>
        </LinearLayout>

        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOG OUT"
            android:textSize="@dimen/big"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:fontFamily="@font/monserrat"
            android:padding="@dimen/medium"
            android:layout_marginTop="@dimen/huge"
            android:gravity="center" />

    </LinearLayout>

</ScrollView>
