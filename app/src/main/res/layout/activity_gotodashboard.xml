            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ALL SET !"
            android:textSize="@dimen/great"
            android:fontFamily="@font/monserrat"
            android:textColor="@color/white"
            android:textStyle="bold"
